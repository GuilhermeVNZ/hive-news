apiVersion: v1
kind: Secret
metadata:
  name: hivenews-secrets
  namespace: hivenews
type: Opaque
stringData:
  # Database
  database_url: "postgresql://user:password@postgres:5432/hivenews"
  
  # DeepSeek API
  deepseek_api_key: "your-deepseek-api-key"
  
  # Vectorizer
  vectorizer_url: "http://vectorizer:15002"
  vectorizer_api_key: "your-vectorizer-api-key"
  
  # Synap
  synap_url: "http://synap:15500"
  
  # Redis
  redis_url: "redis://redis:6379"
  
  # MinIO (S3-compatible)
  minio_url: "http://minio:9000"
  minio_access_key: "minioadmin"
  minio_secret_key: "minioadmin"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: hivenews-config
  namespace: hivenews
data:
  # App Configuration
  NODE_ENV: "production"
  PORT: "3000"
  
  # Logging
  LOG_LEVEL: "info"
  ENABLE_DEBUG: "false"
  
  # Features
  ENABLE_SDXL: "true"
  ENABLE_METRICS: "true"
  ENABLE_HDQL: "true"
  
  # Limits
  MAX_ARTICLES_PER_BATCH: "100"
  MAX_CONCURRENT_JOBS: "10"
  RATE_LIMIT_PER_MINUTE: "60"

