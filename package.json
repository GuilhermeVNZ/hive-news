{
  "name": "hive-news",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/backend-cmmv",
    "apps/frontend-next/AIResearch",
    "apps/frontend-next/ScienceAI",
    "apps/gui"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter='frontend-next-*'",
    "dev:backend": "turbo run dev --filter='backend-cmmv'",
    "dev:gui": "turbo run dev --filter='gui'",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:performance": "vitest run tests/performance",
    "test:security": "vitest run tests/security",
    "test:load": "vitest run tests/load",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "turbo run type-check",
    "coverage": "turbo run coverage",
    "coverage:html": "npm run coverage && open coverage/index.html",
    "docker:build": "docker build -t hivenews/backend:latest -f docker/Dockerfile .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:status": "kubectl get pods -n hivenews",
    "k8s:logs": "kubectl logs -f deployment/hivenews-backend -n hivenews"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.3",
    "prettier": "^3.4.2",
    "turbo": "^2.3.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
